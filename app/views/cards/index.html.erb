<h3><%= "#{ t('cards.cards_list_from_deck_title') } #{ @deck.title }" %></h3>
<% @cards.each_slice(4) do |cards_row| %>
  <div class="row mb-2">
    <% cards_row.each do |card| %>
      <div class="col">
        <div class="card">
          <h5 class="card-header">
            <%= card.original_text %>
          </h5>
          <div class="card-body">
            <%= card.translated_text %>
            <p>
              <%= card.review_date.strftime("%d/%m/%Y") %>
            </p>
          </div>
          <div class="card-footer text-muted">
            <%= link_to t('forms.open'), card_path(card) %>
            <%= link_to t('forms.edit'), edit_card_path(card) %>
            <%= link_to t('forms.destroy'), card_path(card),
              method: :delete,
              data: { confirm: t('forms.sure') } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<%= link_to t('cards.create'), new_deck_card_path(@deck) %><br>
<%= link_to t('cards.back_to_deck_list'), decks_path(@deck) %>
