<p id="notice"><%= notice %></p>

<h1>Колоды</h1>

<table class="table">
  <thead>
    <tr>
      <th>Название</th>
      <th>Текущая</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.title %></td>
        <td><%= check_box_tag('current_deck', '', current_user.current_deck_id == deck.id, disabled: true) %></td>
        <td><%= link_to 'Детали', deck %></td>
        <td><%= link_to 'Изменить', edit_deck_path(deck) %></td>
        <td><%= link_to 'Удалить', deck, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <td><%= link_to 'Сделать Текущей', set_current_deck_path(deck), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

