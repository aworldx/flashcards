<p id="notice"><%= notice %></p>

<h1><%= t('app.users') %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('home.users.email') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to t('forms.open'), user %></td>
        <td><%= link_to t('forms.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('forms.destroy'), user, method: :delete, data: { confirm: t('sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('home.users.new'), new_user_path %>
